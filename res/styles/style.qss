* {
    font-family: "JetBrains Mono";
    font-weight: bold;
    font-size: 14px;

}

QWidget {
    background-color: #222323;
    color: #f0f6f0;
    font-size: 14px;
}
/* QWidget:focus {
    background-color: #222323;
    border: 1px solid salmon;
    color: salmon;
    font-size: 14px;
} */
QPushButton {
    color: #222323;
    background-color: #f0f6f0;
    border: 2px solid #f0f6f0;
    border-radius: 2px;
    padding: 5px;
}
QPushButton:hover {
    color: #f0f6f0;
    background-color: #222323;
}
QPushButton:focus {
    color: salmon;
    background-color: #222323;
    border-color: salmon;
    outline: none;                   /* No outline */
    /* text-selection-color: transparent;
    text-selection-background-color: transparent;
    text-selection-border: none; */
}
QComboBox {
    background-color: #222323;        /* Solid background color */
    border: 1px solid #f0f6f0;        /* Flat border */
    border-radius: 0px;            /* Optional: slightly rounded corners */
    padding: 4px;                  /* Some padding for inner spacing */
    color: white;                  /* Text color */
}
QComboBox:focus {
    border: 1px solid salmon;        /* Flat border */
    color: salmon;                  /* Text color */
}
QComboBox::drop-down {
    border: none;
    background-color: transparent; /* Make the background transparent */
    width: 20px;                   /* Optional: Adjust width of the dropdown button */
}
QComboBox::down-arrow {
    image: url('assets/icons/menu-down.svg');
}
/* Dropdown List */
QComboBox QAbstractItemView {
    background-color: #222323;
    border: 1px solid #f0f6f0;
    border-radius: 2px;
    padding: 5px;
    outline: 0;
}
QComboBox QAbstractItemView::item {
  padding: 5px;
}

QComboBox QAbstractItemView::item:hover {
  padding: 5px;
  background: #f0f6f0;
  color: #222323;
}
QComboBox QAbstractItemView::item:selected {
  padding: 5px;
  background: #f0f6f0;
  color: #222323;
}
QTabWidget {
    background-color: #222323;
    border: 1px solid #f0f6f0;
    min-width: 275px;
}

#toolbox {
    max-width: 46px;  /* Set the maximum width */
    width: 46px;      /* Optional, ensures the width stays fixed */
}

#toolbox QHBoxLayout {
    max-width: 46px;  /* Set the maximum width */
    width: 46px;      /* Optional, ensures the width stays fixed */
}

#toolbox QHBoxLayout {
  padding: 0px;
  margin: 0px;
}

#toolbox QPushButton {
  qproperty-iconSize: 18px;
  color: #f0f6f0;
  background-color: #222323;
  border: 2px solid #f0f6f0;
  border-radius: 2px;
  margin-top: 1px;
  margin-bottom: 5px;
}

#toolbox QPushButton:hover {
    background-color: #f0f6f0;
}

#toolbox QPushButton:focus {
  border: 2px solid salmon;
}

QPushButton#settings {
    margin-bottom: 0px;
}

QToolTip {
    color: #f0f6f0;                   /* Text color */
    background-color: #222323;        /* Background color */
    border: 2px solid #f0f6f0;        /* Border style */
    border-radius: 2px;               /* Rounded corners */
    padding: 2px 5px 2px 5px;
    font-size: 14px;                  /* Text size */
    /* opacity: 200; */
}

QTabWidget::tab-bar {
    alignment: left;
}

QTabBar::tab {
    background-color: #222323;
    border: 1px solid #f0f6f0;
    padding: 5px 10px;
    /* margin-right: 1px; */
}

QTabBar::tab:selected {
    background-color: #f0f6f0;
    color: #222323;
}

QTabBar::tab:focus {
    background: salmon;
    outline: none;  /* Remove the focus outline */
    selection-color: transparent;  /* Disable text selection color */
    selection-background-color: transparent;  /* Disable text selection background */
}

QTabBar::tab:hover {
    background-color: #777;
}

QTabWidget::pane {
    border: 1px solid #f0f6f0;
    background-color: transparent;
}

QSlider::groove:horizontal {
    border: 2px solid white;
    height: 4px;
    border-radius: 2px;
    background: none;  /* No background for the groove itself */
    margin: 6px 0;
}
QSlider::groove:horizontal:focus {
    border: 2px solid salmon;
    height: 4px;
    border-radius: 2px;
    background: none;  /* No background for the groove itself */
    margin: 6px 0;
}
/* Left of the handle: White fill inside the groove only */
QSlider::sub-page:horizontal {
    background: white;
    /* border-radius: 2px; */
    height: 6px;                 /* Same height as the groove */
    margin: 6px 0;               /* Align with the groove */
}
/* Left of the handle: White fill inside the groove only */
QSlider::sub-page:horizontal:focus {
    background: salmon;
    /* border-radius: 2px; */
    height: 6px;                 /* Same height as the groove */
    margin: 6px 0;               /* Align with the groove */
}
/* Right of the handle: Transparent, matching the groove size */
QSlider::add-page:horizontal {
    background: none;
    /* border-radius: 2px; */
    height: 6px;                 /* Same height as the groove */
    margin: 6px 0;               /* Align with the groove */
}

/* Right of the handle: Transparent, matching the groove size */
QSlider::add-page:horizontal {
    background: none;
    /* border-radius: 2px; */
    height: 6px;                 /* Same height as the groove */
    margin: 6px 0;               /* Align with the groove */
}
QSlider::handle:horizontal {
    background: #f0f6f0;
    border: 3px solid #222323;
    width: 5px;
    margin: -6px 0;
    border-radius: 0px;
}
#toggleSlider {
    /* margin: 5px 10px; */
    max-width: 25px;
}

#notificationPane {
  border: 1px solid salmon;
}

#notificationPane QPushButton {
  border: none;
  background: transparent;
  margin: 0;
}


QGraphicsView {
  padding: 10px;
  min-width: 100px;
}
QGraphicsView focus{
  border: 1px solid salmon;
}
